<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register_page">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/home_back"
            android:contentDescription="@string/back" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:shadowColor="#57000000"
                android:text="Hello,"
                android:textAlignment="textStart"
                android:textColor="@color/color"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/Student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:gravity="start"
                android:paddingStart="10dp"
                android:shadowColor="#57000000"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/color"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:baselineAligned="false">

                <ImageView
                    android:id="@+id/imgbtn_Marks"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_button"
                    android:contentDescription="@string/stud_login"
                    android:src="@drawable/marks_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.499" />

                <ImageView
                    android:id="@+id/imgbtn_Attendence"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_button"
                    android:contentDescription="@string/stud_login"
                    android:src="@drawable/attendence_png"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.499" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>